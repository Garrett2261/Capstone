@model Capstone.Models.EmailInformation
@{
    ViewBag.Title = "SendEmailToEmployee";
    
}

<h2>SendEmailToEmployee</h2>
@using (Html.BeginForm("SendEmailToEmployee", "Email", FormMethod.Get))
{
    @Html.TextBoxFor(model => model.Subject)
    @Html.TextBoxFor(model => model.Message)
    <input type="submit" id="submitId" value="submit" onclick="alertMessage()"/>
}

@Html.ActionLink("Index", "Index", "Customers")
<script>
    function alertMessage() {
        alert("Email has been sent")
    }
</script>


