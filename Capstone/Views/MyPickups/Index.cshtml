@model IEnumerable<Capstone.Models.MyPickups>

@{
    ViewBag.Title = "Index";
}

<h1 class="text-center">My Pickups</h1>

<p>
    @Html.ActionLink("Add Pickup", "Create")
</p>
<p>
    @Html.ActionLink("My Account", "Index", "Customers")
</p>
<p>
    @Html.ActionLink("My Dog(s)", "Index", "Dogs")
</p>
<table class="table table-hover table-bordered">
    <tr>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.Dog.Name)
        </th>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.Employee.FirstName)
        </th>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.Frequency)
        </th>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.Time)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td class="text-center">
            @Html.DisplayFor(modelItem => item.Dog.Name)
        </td>
        <td class="text-center">
            @Html.DisplayFor(modelItem => item.Employee.FirstName)
        </td>
        <td class="text-center">
            @Html.DisplayFor(modelItem => item.Frequency)
        </td>
        <td >
            @Html.DisplayFor(modelItem => item.Time)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
