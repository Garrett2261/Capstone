@model IEnumerable<Capstone.Models.MyPickups>

@{
    ViewBag.Title = "Index";
}

<h2>My Pickups</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<p>
    @Html.ActionLink("My Account", "Index", "Customers")
</p>
<p>
    @Html.ActionLink("My Dog(s)", "Index", "Dogs")
</p>
<p>
    @Html.ActionLink("Send Email", "Send", "Email")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Employee.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Dog.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DayOfTheWeek)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Frequency)
        </th>

    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Employee.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Dog.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DayOfTheWeek)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Frequency)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>
