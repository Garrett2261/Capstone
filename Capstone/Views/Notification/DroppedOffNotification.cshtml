@model Capstone.Models.TextInfo
@{
    ViewBag.Title = "DroppedOffNotification";
}

<h2>DroppedOffNotification</h2>
@using (Html.BeginForm("DroppedOffNotification", "Notification", FormMethod.Get))
{
    @Html.TextBoxFor(model => model.Message)
    <input type="submit" id="submitId" value="submit" onclick="alertMessage()" />
}

@Html.ActionLink("Index", "Index", "Employees")
<script>
    function alertMessage() {
        alert("Text has been sent")
    }
</script>
